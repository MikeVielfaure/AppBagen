{% extends "layouts/base.html.twig" %}

{% block body %}
    <div class="container">
    <h2>Nouveau mot de passe</h2>
    </div>
    
    {{ form_start(registrationForm) }}
<div class="container">
    <div class="row" style="position: relative">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default" style="box-shadow: 0px 0px 10px 0px rgba(26, 26, 26, 0.08);
            -moz-box-shadow: 0px 0px 10px 0px rgba(26, 26, 26, 0.08);
            -webkit-box-shadow: 0px 0px 10px 0px rgba(26, 26, 26, 0.08);">
            <div class="panel-heading">
                <h3 class="panel-title">Enregistrer nouveau mot de passe</h3>
            </div>
            <div class="panel-body" style="padding: 30px">
                <div class="form-group">
                    {{ form_label(registrationForm.motdepasse.first) }}
                    <a>*</a>
                    <div class="cl-r">
                        {{ form_errors(registrationForm.motdepasse.first) }}
                    </div>
                    {{ form_widget(registrationForm.motdepasse.first,{'attr': {'class': 'form-control','placeholder':'6 caract√®re min.'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(registrationForm.motdepasse.second) }}
                    <a>*</a>
                    <div class="cl-r">
                        {{ form_errors(registrationForm.motdepasse.second) }}
                    </div>
                    {{ form_widget(registrationForm.motdepasse.second,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div style="text-align:center; margin-top: 30px">
                    <input type="submit" value="Register" class="btn btn-lg btn-primary" formnovalidate >
                </div>
                <div>
                    <a style="font-style: italic">* champ obligatoire</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    
   {{ form_end(registrationForm) }} 
    
</div>
{% endblock %}{# empty Twig template #}
