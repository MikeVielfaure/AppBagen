{% extends "layouts/base.html.twig" %}

{% block body %} 
<div class="container">
<div class="row" style="text-align: center; margin-bottom: 15px">
      <h1 style="color:#337ab7">Profil</h1>
</div>
    
<div class="row" style="position: relative">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default" style="box-shadow: 0px 0px 10px 0px rgba(26, 26, 26, 0.08);
             -moz-box-shadow: 0px 0px 10px 0px rgba(26, 26, 26, 0.08);
             -webkit-box-shadow: 0px 0px 10px 0px rgba(26, 26, 26, 0.08);">
            <form style="padding-left: 0px !important; padding-right:0px !important" method="POST" action="{{ path('profil.valider.tous') }}" >
            <div class="panel-heading">
                <h3 class="panel-title">Mes Informations</h3>
            </div>
            <div class="panel-body" style="padding: 30px">
                <div class="form-group">  
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <a> Nom : </a>
                        </div>
                        <div class="col-md-5">
                            <input  type="text" name="nom" value="{{ app.user.nom }}" autofocus >
                        </div>
                    </div>
                </div>
                <div class="form-group"> 
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <a> Pr√©nom : </a>
                        </div>
                        <div class="col-md-5">
                            <input  type="text" name="prenom" value="{{ app.user.prenom }}" autofocus >
                        </div>
                    </div>        
                </div>
                <div class="form-group">
                    <div class="col-md-12">     
                        <div class="col-md-4">
                            <a> Adresse : </a>
                        </div>
                        <div class="col-md-5">
                            <input  type="text" name="adresse" value="{{ app.user.adresse }}" autofocus >
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">     
                        <div class="col-md-4">
                            <a> Code postal : </a>
                        </div>
                        <div class="col-md-5">
                            <input  type="text" name="codepostal" value="{{ app.user.codepostal }}" autofocus >
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">     
                        <div class="col-md-4">
                            <a> Ville : </a>
                        </div>
                        <form style="padding-left: 0px !important; padding-right:0px !important" method="POST" action="{{ path('profil.valider', {champ:'ville'}) }}" >
                        <div class="col-md-5">
                            <input  type="text" name="ville" value="{{ app.user.ville }}" autofocus >
                        </div>
                    </div>
                </div>             
            </div> 
            <div style="text-align:center; margin-bottom: 30px;">
                <input type="submit" value="Valider" class="btn btn-lg btn-primary" formnovalidate >
            </div>
            </form>
        </div>
    </div>
</div>
</div>
{% endblock %}

